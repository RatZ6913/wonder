{% extends 'base.html.twig' %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('css/question_show.css') }}">
{% endblock %}

{% block title %}{{ question.title }}{% endblock %}

{% block body %}
  <div class="block">
    <div class="d-flex flex-row-nowrap align-items-center pb-30">
      <h3 class="mr-10">{{ question.title }}</h3>
      <div class="question-tag">Question</div>
      <img class="avatar ml-auto" src="https://randomuser.me/api/portraits/women/82.jpg">
    </div>
    <p class="question-text">{{ question.content }}</p>
    <div class="separator"></div>

    {% for comment in question.comments %}
      <div class="question-response-elem">
        <div class="d-flex flex-row-nowrap align-items-center">
          <img class="avatar mr-10" src="https://randomuser.me/api/portraits/women/82.jpg" alt="Avatar-Utilisateur">
          <p>Jean Louis</p>
          <span>12/12/21</span>
        </div>
        <p class="question-comment-text">{{ comment.content }}</p>
      </div>
    {% endfor %}

    <div class="separator"></div>
    <h3 class="pb-20">Votre r√©ponse</h3>
    <div class="comment-form">
      {{ form_start(form) }}
      {{ form_rest(form) }}
        <button class="btn btn-primary">Soumettre</button>
      {{ form_end(form) }}
    </div>
  </div>
{% endblock %}